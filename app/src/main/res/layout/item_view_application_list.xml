<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="taskData"
            type="com.cgg.lrs2020officerapp.model.applicationList.ApplicationListData" />

    </data>

    <LinearLayout
        android:id="@+id/ll_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dimen_10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/checkbox"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="visible"
                    app:layout_behavior="@string/bottom_sheet_behavior">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/elmessiri_regular"
                                android:text="Cluster Name"
                                android:textSize="@dimen/dimen_16sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/elmessiri_regular"
                                android:singleLine="false"
                                android:text="@{taskData.cLUSTER_NAME}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_16sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/elmessiri_regular"
                                android:text="Application Number"
                                android:textSize="@dimen/dimen_16sp" />

                            <TextView
                                android:id="@+id/application_no"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/elmessiri_regular"
                                android:singleLine="false"
                                android:text="@{taskData.APPLICATIONID}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/elmessiri_regular"
                                android:text="Applicant Name"
                                android:textSize="@dimen/dimen_16sp" />

                            <TextView
                                android:id="@+id/applicant_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/elmessiri_regular"
                                android:singleLine="false"
                                android:text="@{taskData.NAME}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_16sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/elmessiri_regular"
                                android:text="Father Name"
                                android:textSize="@dimen/dimen_16sp" />

                            <TextView
                                android:id="@+id/father_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/elmessiri_regular"
                                android:singleLine="false"
                                android:text="@{taskData.FATHERHUSBANDNAME}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_16sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/elmessiri_regular"
                                android:text="Mobile Number"
                                android:textSize="@dimen/dimen_16sp" />

                            <TextView
                                android:id="@+id/mbl_no"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/elmessiri_regular"
                                android:singleLine="false"
                                android:text="@{taskData.APPLICANTMOBILENO}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/elmessiri_regular"
                                android:text="Plot Number"
                                android:textSize="@dimen/dimen_16sp" />

                            <TextView
                                android:id="@+id/plot_no"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/elmessiri_regular"
                                android:singleLine="false"
                                android:text="@{taskData.PLOTNUMBER}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_5dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/elmessiri_regular"
                                android:text="Locality"
                                android:textSize="@dimen/dimen_16sp" />


                            <TextView
                                android:id="@+id/locality"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/elmessiri_regular"
                                android:singleLine="false"
                                android:text="@{taskData.LOCALITY}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_16sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_5dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/elmessiri_regular"
                                android:text="Verified Date"
                                android:textSize="@dimen/dimen_16sp" />


                            <TextView
                                android:id="@+id/verified_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/elmessiri_regular"
                                android:singleLine="false"
                                android:text="@{taskData.UPDATEDON}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_16sp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</layout>